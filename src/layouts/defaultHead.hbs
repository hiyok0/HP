<!--
default head -->
	<!--favicon等-->
	<link rel="icon" type="image/x-icon" href="/favicon.ico">
	
	<!--文字コード宣言-->
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	
	<!-- アイコン用　remix icon 2.5.0 -->
	<link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
	
	<!--シンタックスハイライト用-->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.27.0/themes/prism-okaidia.min.css" rel="stylesheet" />
	<style>
		body{
			background-color: #EDF7FF;
			}
		.body{
			background-color: #EDF7FF;
			max-width:56rem;
			margin: 0 auto;
			}
		code{
			font-family: "Consolas", "Monaco", "Andale Mono", "Ubuntu Mono", "Menlo", monospace;
			background-color: snow;
			border-radius: 0.15em;
			border: 1px solid lightgray;
		}
		code[class*="language-"]{
			display: inline-block;
			background-color: #2d2624;
			padding: 1em;
			margin-left: 1.5em;
			max-width: 90%;
			overflow: auto;
			border-radius: 1em;
			}
		[class^="ri-"]{
			color: black;
			text-decoration: none;
			position: relative;
			top: 0.15em;
			}
		
		.body red{color: red;}
		
		h2{
			padding-left: 0.3rem;
			border-left: 0.2em solid navy;
			border-bottom: 0.1em solid navy;
		}
		h3:before{
			content: "║ ";
			color: navy;
			font-size: 1.6rem;
			vertical-align: central;
		}
		h4:before{
			content: "╎ ";
			color: navy;
			font-size: 1.4rem;
			vertical-align: central;
		}
		<!-- [code] div[class^=”xxx-“], div[class*=” xxx-“] { background: red; } [/code] -->
	</style>
<!--default head end -->
