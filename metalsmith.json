{
	"source": "src/posts",
	"destination": "output",
	"metadata": {
		"title": "this is title",
		"description": "this is a discription"
		},
	
	"plugins": [{
		"@metalsmith/drafts": {
			"default": false
			},
		
		"@metalsmith/default-values": [{
			"pattern": "**/*",
			"defaults": {
				"layout": "blog.hbs",
				"link": "blog",
				"collection": "blog",
				"author": "hiyoko",
				"overview": "著者が入力をサボりました。なので概要はありません。",
				"toc": true,
				"ogType": "article"
				}
			}],
		
		"metalsmith-discover-helpers": {
			"directory": "src/layouts"
			},
		 "metalsmith-discover-partials": {
			  "directory": "src/layouts",
			  "pattern": ".hbs$"
			},
		
		"metalsmith-tags": {
			"handle": "tags",
			"path": "tags/:tag/index.html",
			"pathPage": "tags/:tag/:num/index.html",
			"perPage": 25,
			"layout": "tags.hbs",
			"normalize": true,
			"sortBy": "date",
			"reverse": true,
			"skipMetadata": false,
			"metadataKey": null
			},
			
		"@metalsmith/markdown": {
			"pedantic": false,
			"gfm": true,
			"tables": true,
			"breaks": false,
			"sanitize": false,
			"smartLists": true,
			"smartypants": false,
			"xhtml": false
			},
		
		"metalsmith-asciidoctor": {},
		
		"metalsmith-highlight": {},
		
		"@metalsmith/table-of-contents": {
			"levels": [2,3],
			"anchor": "add",
			"root": null
			},
		
		"@metalsmith/permalinks": {
			"date": "YYYY",
			"linksets": [
					{
					"match": { "link": "blog" },
					"pattern": "blog/:date/:title",
					"date": "YYYY"
					},{
					"match": {"link": "page"},
					"pattern": "pages/:title"
					},{
					"match": {"link": "top"},
					"pattern": "./:title"
					},{
					"match": {"link":"home"},
					"pattern": "./"
					}
				],
			"rerative": false
			},
		
		"@metalsmith/collections":{
			"blog": {
				"sortBy": "date",
				"reverse": true,
				"refer": true
				}
			},
			
		"metalsmith-handlebars-contents": {
			"helpers": ["src/layouts/*.js"],
			"match": "**",
			"partials": ["./src/layouts/*"]
			},
		
		"@metalsmith/layouts": {
			"directory": "src/layouts"
			},
		
		 "metalsmith-assets": {
			"source": "src/static",
			"destination": "./"
			}

		}]
	}
