{
	"source": "src/posts",
	"destination": "output",
	"metadata": {
		"title": "this is title",
		"description": "this is a discription"
		},
	
	"plugins": [{
		"@metalsmith/drafts": {
			"default": false
			},
		
		"@metalsmith/default-values": [{
			"pattern": "**/*",
			"defaults": {
				"layout": "blog.hbs",
				"link": "blog",
				"auther": "hiyoko"
				}
			}],
		
		"metalsmith-highlight": {},
		
		"metalsmith-discover-helpers": {
			"directory": "src/layouts"
			},
		
		"metalsmith-tags": {
			"handle": "tags",
			"path": "tags/:tag/index.html",
			"pathPage": "tags/:tag/:num/index.html",
			"perPage": 25,
			"layout": "tags.hbs",
			"normalize": true,
			"sortBy": "date",
			"reverse": true,
			"skipMetadata": false,
			"metadataKey": null
			},

		"metalsmith-handlebars-contents": {
			"match": "**"
			},
		
		"@metalsmith/markdown": {
			"pedantic": false,
			"gfm": true,
			"tables": true,
			"breaks": false,
			"sanitize": false,
			"smartLists": true,
			"smartypants": false,
			"xhtml": false
			},
		
		"metalsmith-asciidoctor": {},
		
		"@metalsmith/permalinks": {
			"date": "YYYY",
			"linksets": [
					{
					"match": { "link": "blog" },
					"pattern": "blogs/:date/:title",
					"date": "YYYY"
					},{
					"match": {"link": "page"},
					"pattern": "pages/:title"
					},{
					"match": {"link":"topPage"},
					"pattern": "./"
					}
				]
			},
		
		"@metalsmith/collections":{
			"blog": {
				"sortBy": "date",
				"reverse": true
				}
			},
		
		"metalsmith-layouts": {
			"directory": "src/layouts"
			},
				
		"@metalsmith/table-of-contents": {
			"levels": [2,3],
			"anchor": "add",
			"root": null
			}
		

		}]
	}
